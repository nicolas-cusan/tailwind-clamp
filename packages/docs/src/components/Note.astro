---
interface Props {
  type?: 'note' | 'tip' | 'warning';
}

const { type = 'note' } = Astro.props;

const styles = {
  note: 'border-orange-400/30 bg-orange-50 text-orange-800 [&_code]:px-1',
  tip: 'border-green-400 bg-green-50 text-green-900 [&_strong]:text-green-700',
  warning:
    'border-amber-400 bg-amber-50 text-amber-900 [&_strong]:text-amber-700',
};

// const icons = {
