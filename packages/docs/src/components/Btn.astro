---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

{
  href ? (
    <a
      href={href}
      class="bg-white relative transition hover:bg-sky-600 text-stone-800 px-4 py-2.5 rounded-lg inline-flex items-center gap-2 no-underline hover:text-white"
    >
      <slot />
    </a>
  ) : (
    <button class="bg-white relative transition hover:bg-sky-600 text-stone-800 px-4 py-2.5 rounded-lg inline-flex items-center gap-2 no-underline hover:text-white">
      <slot />
    </button>
  )
}
