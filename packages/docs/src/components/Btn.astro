---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

{href ? (
  <a href={href} class="bg-white transition hover:bg-stone-600 text-stone-800 hover:text-white px-4 py-2.5 rounded-lg inline-flex items-center gap-2 no-underline">
    <slot />
  </a>
) : (
  <button class="bg-white transition hover:bg-stone-600 text-stone-800 hover:text-white px-4 py-2.5 rounded-lg inline-flex items-center gap-2 no-underline underline-offset-4">
    <slot />
  </button>
)}