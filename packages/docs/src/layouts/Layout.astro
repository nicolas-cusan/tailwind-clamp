---
import '../styles/global.css';
import GitHub from '../icons/github.svg';
import X from '../icons/x.svg';
import { SEO } from 'astro-seo';
import Header from '../components/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class="clamp-[text,base,lg] scroll-smooth bg-stone-100 text-stone-800"
>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Tailwind CSS plugin to use CSS clamp in your projects"
    />
    <meta name="viewport" content="width=device-width" />

    <SEO
      title={title}
      description="Tailwind CSS plugin to use CSS clamp in your projects"
      twitter={{
        creator: '@n_cusan',
      }}
      extend={{
        link: [
          { rel: 'icon', href: '/tailwind-clamp/favicon.ico' },
          {
            rel: 'icon',
            href: '/tailwind-clamp/icon.svg',
            type: 'image/svg+xml',
          },
          {
            rel: 'apple-touch-icon',
            href: '/tailwind-clamp/apple-touch-icon.png',
          },
          { rel: 'manifest', href: '/tailwind-clamp/manifest.webmanifest' },
        ],

        meta: [
          { name: 'theme-color', content: '#000' },
          { name: 'generator', content: Astro.generator },
          { name: 'twitter:title', content: title },
        ],
      }}
    />

    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body
    class="before:content before:absolute before:inset-0 before:bg-linear-to-b before:from-sky-500/40"
  >
    <Header />
    <main
      class="clamp-[px,5,10] max-w-5xl mx-auto clamp-[py,8,18] relative z-10"
    >
      <slot />
    </main>
    <footer class="bg-white/60 border-t border-stone-200">
      <div
        class="clamp-[px,5,10] max-w-5xl mx-auto clamp-[py,4,6] flex flex-wrap gap-1 justify-between"
      >
        <p class="text-stone-500 mb-0 text-sm">
          Made by <a
            href="https://www.nicolascusan.com"
            class="hover:text-sky-600 underline decoration-1 underline-offset-4 decoration-stone-300 hover:decoration-sky-600 transition"
            >Nicolas Cusan</a
          >.
        </p>
        <p class="text-stone-500 mb-0 text-sm flex gap-4">
          <a
            href="https://github.com/nicolas-cusan/tailwind-clamp"
            class="inline-flex items-center gap-2 hover:text-sky-600"
          >
            <GitHub class="fill-current flex-none clamp-[size,4,5]" />
          </a>

          <a
            href="https://x.com/n_cusan"
            class="inline-flex items-center gap-2 hover:text-sky-600"
          >
            <X class="fill-current flex-none clamp-[size,3.5,4.5]" />
          </a>
        </p>
      </div>
    </footer>
  </body>
</html>
