---
import '../styles/global.css';
import GitHub from '../icons/github.svg';
import { SEO } from 'astro-seo';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="clamp-[text,base,lg] bg-gradient-to-b from-stone-200 to-stone-300 text-stone-800">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Tailwind CSS plugin to use CSS clamp in your projects" />
    <meta name="viewport" content="width=device-width" />

    <SEO
      title={title}
      description="Tailwind CSS plugin to use CSS clamp in your projects"

      twitter={{
        creator: '@n_cusan',
      }}
      extend={{
        link: [
          { rel: 'icon', href: '/favicon.ico' },
          { rel: 'icon', href: '/icon.svg', type: 'image/svg+xml' },
          { rel: 'apple-touch-icon', href: '/apple-touch-icon.png' },
          { rel: 'manifest', href: '/manifest.webmanifest' },
        ],

        meta: [
          { name: 'theme-color', content: '#000' },
          { name: 'generator', content: Astro.generator },
          { name: 'twitter:title', content: title },

        ],
      }}
    />

    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="">
    <!-- <header class="border-b border-gray-200 dark:border-gray-800">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-bold text-gray-900 dark:text-white">Tailwind Clamp</a>
          <div class="flex items-center space-x-4">
            <a href="/docs" class="text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white">Documentation</a>
            <a href="https://github.com/nicolas-cusan/tailwind-clamp" class="text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white">GitHub</a>
          </div>
        </div>
      </nav>
    </header> -->
    <main class="clamp-[px,5,10] max-w-4xl mx-auto clamp-[py,8,18]">
      <slot />
    </main>
    <footer class=" bg-white">
      <div class="clamp-[px,5,10] max-w-4xl mx-auto clamp-[py,4,6] flex flex-wrap gap-1 justify-between">
        <p class=" text-stone-600 mb-0">
          Made by <a href="https://nicolas-cusan.com" class="">Nicolas Cusan</a>.
        </p>
        <p class=" text-stone-600 mb-0">
          <a href="https://github.com/nicolas-cusan/tailwind-clamp" class="inline-flex items-center gap-2 no-underline">
            <GitHub class="fill-current flex-none clamp-[size,4,5]" /> View on GitHub
          </a>
        </p>
      </div>
    </footer>
  </body>
</html>